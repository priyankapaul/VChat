<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_background">

    <TextView
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:text="Change your Password"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:textSize="17dp"
        android:layout_below="@+id/alertpass"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="New Password"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/newpass"
        android:hint="New Password"
        android:textColor="#000000"
        android:password="true"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:id="@+id/cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newpass"
        android:layout_toRightOf="@+id/alertpass"
        android:layout_toEndOf="@+id/alertpass"
        android:weightSum="1">
    <Button
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:text="Change Password"
        android:id="@+id/btchangepass"
        android:textColor="#000000"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:textSize="13dp"
        android:layout_weight="1.15" />

    <Button
        android:layout_width="197dp"
        android:layout_height="40dp"
        android:text="Cancel"
        android:id="@+id/btcancel"
        android:textColor="#000000"
        android:layout_alignTop="@+id/btchangepass"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/btchangepass"
        android:textSize="13dp"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:id="@+id/alertpass"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>